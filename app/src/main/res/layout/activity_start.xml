<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FBEBAF"
    android:gravity="center|center_horizontal"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:background="@drawable/tavle"
        android:gravity="center"
        android:text="2+2"
        android:textColor="@android:color/white"
        android:textSize="46sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="251dp"
        android:layout_height="97dp"
        android:background="@drawable/svarbobble"
        android:gravity="center"
        android:text="TextView"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/num1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/n1" />

        <TextView
            android:id="@+id/num2"
            android:layout_width="128dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/n2" />

        <TextView
            android:id="@+id/num3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/n3" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView11"
            android:layout_width="152dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@drawable/n4" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="152dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@drawable/n5" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="152dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:background="@drawable/n6" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/n7" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/n8" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/n9" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="105dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="@drawable/n0" />
    </LinearLayout>

</LinearLayout>